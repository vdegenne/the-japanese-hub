{
  "name": "the-japanese-hub",
  "version": "1.0.0",
  "description": "Jap Hub",
  "type": "module",
  "author": "Valentin Degenne <vdegenne@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "wireit": {
    "dev": {
      "dependencies": [
        "dev:vite"
      ]
    },
    "build": {
      "dependencies": [
        "build:vite"
      ]
    },
    "build:server": {
      "command": "tsc --pretty -p ./tsconfig.server.json",
      "clean": "if-file-deleted",
      "files": [
        "./tsconfig.server.json",
        "./src/server/**/*.ts"
      ],
      "output": [
        "./lib/"
      ]
    },
    "serve:server": {
      "service": true,
      "command": "node ./lib/server.js",
      "dependencies": [
        "build:server"
      ],
      "files": []
    },
    "vuc": {
      "service": true,
      "command": "vuc",
      "files": [
        "./.vuc.json"
      ]
    },
    "dev:vite": {
      "service": true,
      "command": "vite --host",
      "dependencies": [
        "vuc"
      ]
    },
    "build:vite": {
      "command": "vite build",
      "files": [
        "./vite.config.js",
        "./src/",
        "./index.html",
        "./public"
      ],
      "output": []
    },
    "pwa-assets": {
      "command": "pwa-assets-generator --preset minimal-2023 --html.preset 2023 public/logo.svg",
      "files": [
        "public/logo.svg"
      ],
      "output": [
        "public/pwa-64x64.png",
        "public/pwa-192x192.png",
        "public/pwa-512x512.png",
        "public/maskable-icon-512x512.png",
        "public/apple-touch-icon-180x180.png",
        "public/favicon.ico"
      ]
    }
  },
  "devDependencies": {
    "@material/mwc-top-app-bar": "^0.27.0",
    "@material/web": "^2.4.1",
    "@snar/lit": "^1.8.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@vdegenne/about-dialog": "^0.4.2",
    "@vdegenne/debouncer": "^1.0.9",
    "@vdegenne/debug": "^0.1.30",
    "@vdegenne/forms": "^0.1.56",
    "@vdegenne/links": "^1.7.11",
    "@vdegenne/material-color-helpers": "^1.11.7",
    "@vdegenne/mini-gamepad": "^0.4.7",
    "@vdegenne/mini-rest": "^0.3.2",
    "@vdegenne/rollup-plugin-minify-html": "^1.0.6",
    "@vdegenne/router": "file:../router",
    "@vite-pwa/assets-generator": "^1.0.2",
    "chalk": "^5.6.2",
    "custom-element-decorator": "^0.6.0",
    "html-vision": "^0.3.8",
    "lit": "^3.3.1",
    "lit-with-styles": "^2.1.3",
    "material-3-dialog": "^0.1.11",
    "material-shell": "^1.3.7",
    "rollup-plugin-material-all": "^1.2.2",
    "rollup-plugin-minify-template-literals": "^1.1.7",
    "snar": "^2.3.7",
    "snar-save-to-local-storage": "^1.0.1",
    "tailwindcss": "^4.1.17",
    "toastit": "^2.2.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-mdicon2svg": "^0.2.3",
    "vite-plugin-pwa": "^1.1.0",
    "vscode-ui-connector": "^0.2.4",
    "wireit": "^0.14.12"
  },
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "pwa-assets": "wireit"
  }
}